<Window x:Class="ClientSide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientSide"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Name="ScreenImage" Height="348" Margin="10,10,0,0" VerticalAlignment="Top" Width="783"/>
        <Button Content="ConnectToServer" Margin="50 0 0 10" HorizontalAlignment="Left" Height="60" Width="150" VerticalAlignment="Bottom" Click="ConnectToServer" />
        <Button Content="SendToScreenShot"  Margin="10" HorizontalAlignment="Center" Height="60" Width="150" VerticalAlignment="Bottom" Click="SendToScreenshot" />
        <Button Content="ShowScreenshot"  Margin="0 0 50 10" HorizontalAlignment="Right" Height="60" Width="150" VerticalAlignment="Bottom" Click="ShowScreen" />
        <!--<Button Content="GetStart" Height="10" Width="10"/>-->

    </Grid>
</Window>
